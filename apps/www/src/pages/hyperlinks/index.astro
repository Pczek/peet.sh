---
import Layout from '../../layouts/LinksLayout.astro';
import linkData from './hyperlinks.json';
export interface LinkInfo {
  url: string;
  title: string;
  description: string | null;
  ogTitle: string | null;
  ogDescription: string | null;
  ogImage: string | null;
  ogSiteName: string | null;
  twitterCard: string | null;
  twitterTitle: string | null;
  twitterDescription: string | null;
  twitterImage: string | null;
  favicon: string | null;
  keywords: string | null;
  author: string | null;
  publishedTime: string | null;
  modifiedTime: string | null;
}
---

<Layout title={'List of nice hyperlinks'}>
  <ol class="gap-2">
    {
      linkData.map((link: LinkInfo, index: number) => (
        <li>
          <a
            class="flex flex-col py-2 px-1 font-mono "
            href={link.url}
            target={'_blank'}
          >
            <div class="flex flex-row gap-2 items-center">
              <img class="aspect-square w-4" src={link.favicon} alt=" " />

              <span class="truncate">{link.ogTitle || link.title}</span>
            </div>
            <div>
              <span class="text-sm line-clamp-2 text-black">{link.description}</span>
            </div>
          </a>
        </li>
      ))
    }
  </ol>
</Layout>
