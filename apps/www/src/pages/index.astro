---
import { FeatProfileArena } from 'feature-profile-arena';
import { TerminalComponent } from 'feature-profile-terminal';
import { FeatPortfolioP5 } from 'feature-portfolio-p5';
import { FeatPortfolioModels } from 'feature-portfolio-models';
import { FeatSportStats } from 'feature-sport-stats';
import { FeatStravaActivities } from 'feature-strava-activities';

import Layout from '../layouts/Layout.astro';
---

<Layout title="peet.sh / Philip Poloczek">
  <main>
    <FeatProfileArena client:load />
    <div class="relative">
      <h1 class="text-8xl absolute top-0 break-all">epic adventures</h1>
      <FeatStravaActivities client:visible />
    </div>
    <div class="relative">
      <h1 class="text-8xl absolute top-36 break-all">number go up ↗</h1>
      <FeatSportStats client:only />
    </div>
    <div class="relative">
      <h1 class="text-6xl absolute top-[80vh] left-[50vw] break-all">
        ❀ handmade flowers, just for you ✿
      </h1>
      <FeatPortfolioModels client:visible />
    </div>

    <div class="relative">
      <h1 class="text-6xl absolute top-[30vh] left-[20vw] break-all">
        much nfts, such wow •ᴗ•
      </h1>

      <FeatPortfolioP5 client:only />
    </div>
    <div class="relative">
      <h1 class="text-6xl absolute top-[30vh] left-[20vw] break-all">
        old, but still cool ☞☜
      </h1>
      <TerminalComponent client:only />
      </div>
  </main>
</Layout>
